{
  "name": "my-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint \"{apps,services,libs}/**/src/**/*.ts\"",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write \"{apps,services,libs}/**/*.{ts,js,json,md,yaml}\"",
    "format:check": "prettier --check \"{apps,services,libs}/**/*.{ts,js,json,md,yaml}\"",
    "test": "echo 'Run tests for specific projects or with a monorepo tool'",
    "check": "pnpm lint && pnpm format:check",
    "fix": "pnpm lint:fix && pnpm format"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.0.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml}": [
      "prettier --write"
    ]
  }
}